<%- layout("/layouts/boilerplate") %>
    <h3>All Listings</h3>
    <!-- <form method="get" action="/listings/new">
        <button>Create New listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 ">
        <% for(let listing of allListings){ %>
            <a class="listing-ref" href="/listings/<%= listing._id %>">
                <div class="card col listing-card">
                    <img class="card-img-top" style="height: 20rem;" src="<%= listing.image %>" alt="listing" />
                <div class="card-img-overlay">
                    
                </div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b>
                            <br>
                            &#2547;<%= listing.price.toLocaleString("en-BN") %>/= per night
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>