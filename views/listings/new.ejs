<%- layout("/layouts/boilerplate") %>
<div class="row">
   <div class="col-8 offset-2">
    <h3>Create A new list</h3>
    <form method="POST" action="/listings">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" id="" placeholder="Enter Title" class="form-control">
        </div> 
  

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="listing[description]" id="" placeholder="Enter description" class="form-control"></textarea> 
        </div>
       

        <div class="mb-3">
            <label for="image" class="form-label">Image link</label>
            <input type="text" name="listing[image]" id="" placeholder="Enter image URL" class="form-control"> 
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price:</label>
                <input type="number" name="listing[price]" id="" placeholder="Enter Price" class="form-control"> 
            </div>
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" id="" placeholder="Enter Location" class="form-control">
            </div>
        </div>


       <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input type="text" name="listing[country]" id="" placeholder="Enter Country" class="form-control"> 
       </div>
     

        <button class="btn btn-dark">create listing</button>
    </form>
   </div>
    </div>
